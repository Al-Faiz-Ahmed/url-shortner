generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id                 String   @id @default(uuid())
  ipAddress          String   @map("ip_address")
  createdAt          DateTime @default(now()) @map("created_at")
  totalShortenedURL  Int      @default(0) @map("total_shortened_url")
  generatedUrls GeneratedURL[]

  @@map("users")
}

model GeneratedURL {
  id             String   @id @default(uuid())
  givenURL       String   @map("given_url")
  generatedURL   String   @unique @map("generated_url")
  uniqueHash     String   @unique @map("unique_hash")
  isBlock        Boolean  @default(false) @map("is_block")
  totalVisitors  Int      @default(0) @map("total_visitors")

  // Foreign key
  userId String @map("user_id")
  user   User  @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("generated_urls")
}